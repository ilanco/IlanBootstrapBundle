{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/ilanbootstrap/lib/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/ilanbootstrap/lib/bootstrap/css/bootstrap-rtl.min.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/ilanbootstrap/css/screen.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('bundles/ilanbootstrap/css/screen-rtl.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/ilanbootstrap/lib/jquery/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/ilanbootstrap/lib/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block body %}
    {% block top_navbar %}
    {% endblock %}

    {% block container %}
    <div class="container">

        <header>
            {% block header %}
            {% endblock %}
        </header>

        {% block content %}
        {% endblock %}

        <footer class="footer">
            {% block footer %}
            <p>&copy; {% trans %}copyright{% endtrans %}</p>
            {% endblock %}
        </footer>

    </div>
    {% endblock %}
{% endblock %}

